{
  "$schema": "../gen/schemas/mobile-schema.json",
  "identifier": "mobile",
  "description": "enables mobile-specific permissions",
  "windows": ["main"],
  "platforms": ["iOS", "android"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "notification:default",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        },
        {
          "url": "mailto:*"
        },
        {
          "url": "tel:*"
        }
      ]
    },
    "os:default"
  ]
}
